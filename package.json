{
  "name": "next-project-template",
  "version": "0.1.0",
  "private": true,
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,less}": [
      "stylelint --fix",
      "prettier --write",
      "sh -c 'for file in \"$@\"; do typed-scss-modules \"$file\"; git add \"${file}.d.ts\"; done' sh"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "scripts": {
    "build": "npm run lint && next build",
    "check-types": "tsc --pretty",
    "dev": "npm-run-all --parallel next:dev tsm:watch",
    "format": "prettier --check --ignore-path .gitignore .",
    "format:fix": "prettier --write --ignore-path .gitignore .",
    "husky:check": "bash .husky/pre-commit",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:css": "stylelint '**/*.{css,scss}'",
    "lint:css:fix": "stylelint --fix '**/*.{css,scss}'",
    "lint:js": "eslint",
    "lint:js:fix": "eslint --fix",
    "lint:staged": "lint-staged",
    "next:dev": "next dev",
    "prepare": "husky",
    "start": "next start",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "tsm:check": "typed-scss-modules app/**/*.module.scss -l",
    "tsm:fix": "typed-scss-modules app/**/*.module.scss",
    "tsm:watch": "typed-scss-modules app/**/*.module.scss --watch --ignoreInitial"
  },
  "dependencies": {
    "next": "14.2.4",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@eslint/compat": "^1.1.0",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.6.0",
    "@next/eslint-plugin-next": "^14.2.4",
    "@testing-library/dom": "^10.3.1",
    "@testing-library/react": "^16.0.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "eslint": "^9.6.0",
    "eslint-config-next": "14.2.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^9.0.11",
    "jsdom": "^24.1.0",
    "lint-staged": "^15.2.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.1.9",
    "postcss-import": "12.0.1",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.3.2",
    "sass": "^1.77.6",
    "stylelint": "^16.6.1",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-declaration-strict-value": "^1.10.4",
    "stylelint-order": "^6.0.4",
    "typed-scss-modules": "^8.0.1",
    "typescript": "^5",
    "vitest": "^1.6.0"
  }
}
